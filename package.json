{
	"name": "vscode-rustfmt",
	"displayName": "vscode-rustfmt",
	"description": "document formatter for single rust file",
	"publisher": "statiolake",
	"version": "0.1.1",
	"repository": { "type": "git", "url": "https://github.com/statiolake/vscode-rustfmt/"},
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other",
		"Programming Languages",
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:rust"
	],
	"main": "./out/extension.js",
	"contributes": {},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"package": "vsce package"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
